execute pathogen#infect()

syntax on
filetype plugin indent on
let g:rehash256 = 1

set tabstop=2
set shiftwidth=2
set smarttab
set expandtab
set smartindent
set splitright
set splitbelow

colors molokai

let g:netrw_liststyle = 3
let g:netrw_banner = 0

let g:ctrlp_open_multiple_files = 'tj'
let g:ctrlp_tabpage_position = 'ac'
